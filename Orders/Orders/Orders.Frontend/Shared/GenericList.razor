@typeparam Titem


@if (MyList == null)
{
    @if(Loading == null)
    {
        <div class="d-flex justify-content-center align-items-center">
            <img src="https://i.gifer.com/XOsX.gif" />
        </div>
    }
    else
    {
        @Loading
    }
}
else if(MyList.Count == 0)
{
    @if(NoRecords is null)
    {
        <p>No hay registros para mostrar..</p>
    }
    else
    {
        @NoRecords
    }
}
else
{
    @Body
}